<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drawer.home.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/add_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="@+id/door_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/door_txt_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lyt_add_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_orangie"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/add_friends_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensanslight"
                    android:text="+Add friends"
                    android:textColor="@color/orangeWeb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_sensors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="@+id/sensor_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/sensor_txt_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lyt_add_sensors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_orangie"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/add_sensors_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensanslight"
                    android:text="+Add sensors"
                    android:textColor="@color/orangeWeb"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button911"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/emergency"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintEnd_toEndOf="@+id/sensorActivityCard"
            app:layout_constraintStart_toStartOf="@+id/sensorActivityCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout_button911"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_911"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/opensanslight"
                    android:text="911 assistance"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lockButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:cardBackgroundColor="#FCA311"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toTopOf="@+id/button911"
            app:layout_constraintEnd_toEndOf="@+id/sensorActivityCard"
            app:layout_constraintStart_toStartOf="@+id/sensorActivityCard"
            app:layout_constraintTop_toBottomOf="@+id/sensor_txt_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/opensanslight"
                    android:text="Lock door"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/unlockButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:cardBackgroundColor="#FCA311"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toTopOf="@+id/button911"
            app:layout_constraintEnd_toEndOf="@+id/sensorActivityCard"
            app:layout_constraintStart_toStartOf="@+id/sensorActivityCard"
            app:layout_constraintTop_toBottomOf="@+id/sensor_txt_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/relativeLayout_unlock"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_unlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_unlock"
                    android:drawablePadding="4dp"
                    android:fontFamily="@font/opensanslight"
                    android:text="Unlock door"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/doorActivityCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/door_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/door_txt_home">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/door_recycler_home"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/platinum"
                tools:listitem="@layout/door_activity_item" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sensorActivityCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sensor_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/sensor_txt_home">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sensor_recycler_home"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/platinum"
                android:visibility="visible"
                tools:listitem="@layout/sensor_activity_item" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/sensor_txt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Sensor Activity"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/door_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/door_txt_home" />

        <TextView
            android:id="@+id/door_txt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Door Camera Activity"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/no_activity_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No activity yet"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/sensor_txt_home"
            app:layout_constraintStart_toStartOf="@+id/door_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/door_txt_home" />

        <TextView
            android:id="@+id/no_activity_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="No activity yet"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/sensor_txt_home"
            app:layout_constraintTop_toBottomOf="@+id/sensor_txt_home" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>